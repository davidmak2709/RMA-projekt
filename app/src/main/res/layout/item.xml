<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/eventHolder"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/eventFriendsGoing"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventSport" />

        <TextView
            android:id="@+id/eventDistance"
            android:layout_width="160dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/eventOwner"
            card_view:layout_constraintStart_toEndOf="@+id/eventSport" />

        <TextView
            android:id="@+id/eventTimeLeft"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/eventTime" />

        <TextView
            android:id="@+id/eventGoing"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/eventTimeLeft"
            card_view:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/eventOwner"
            android:layout_width="160dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textSize="15sp"
            card_view:layout_constraintStart_toEndOf="@+id/eventPhoto"
            card_view:layout_constraintTop_toBottomOf="@+id/eventTitle" />

        <TextView
            android:id="@+id/eventTime"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textSize="15sp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/eventPhoto"
            android:layout_width="70dp"
            android:layout_height="68dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/eventSport"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/eventPhoto"
            card_view:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/eventTitle"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:textAlignment="viewStart"
            android:textSize="30sp"
            app:autoSizeTextType="uniform"
            card_view:layout_constraintStart_toEndOf="@+id/eventPhoto"
            card_view:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>